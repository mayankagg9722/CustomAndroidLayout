<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mayankaggarwal.appathon.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/firstlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="0.5">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#fcb2bf"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        android:id="@+id/extraone"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Click To Add A Person"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/optiononeset"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="bottom|right"
                            android:layout_marginTop="35dp"
                            android:padding="5dp"
                            android:src="@drawable/options" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="#483d9e"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        android:id="@+id/card"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/cardone"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="35dp"
                            android:src="@drawable/cardone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="150dp"
                            android:text="Add A Person"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/optionone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="bottom|right"
                            android:layout_marginTop="35dp"
                            android:padding="5dp"
                            android:src="@drawable/options" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            app:cardBackgroundColor="#fcb2bf"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            android:id="@+id/extratwo"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Click To View Orders"
                                android:textColor="#fff"
                                android:textSize="10dp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/optiontwoset"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="bottom|right"
                                android:layout_marginTop="35dp"
                                android:src="@drawable/options"  />
                        </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:cardBackgroundColor="#d976b6"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        android:id="@+id/cardtwo">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="25dp"
                            android:text="View Orders"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/optiontwo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="bottom|right"
                            android:layout_marginTop="35dp"
                            android:src="@drawable/options" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/cardtwo"
                            android:id="@+id/imageView2" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#fcb2bf"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        android:id="@+id/extrathree"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Click To Add A Product"
                            android:textColor="#fff"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/optionthreeset"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="bottom|right"
                            android:layout_marginTop="35dp"
                            android:src="@drawable/options"  />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="#a856b1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp"
                        android:id="@+id/cardthree">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginTop="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/cardthree" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_marginTop="15dp"
                            android:text="Add A Product"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/optionthree"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="bottom|right"
                            android:layout_marginTop="35dp"
                            android:src="@drawable/options" />


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstlayout"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:elevation="0dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#dbdbdb"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/call">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Another Admin"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_margin="10dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center|"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#dbdbdb"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report Bugs"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:layout_margin="10dp"
                        android:id="@+id/bugs"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#dbdbdb"/>


            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
